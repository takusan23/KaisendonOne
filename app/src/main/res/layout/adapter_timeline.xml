<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_timeline_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="2sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="2sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adapter_timeline_avatar"
                    android:layout_width="40sp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_home_24px" />

                <ImageView
                    android:id="@+id/adapter_timeline_icon_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_home_24px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adapter_timeline_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adapter_timeline_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/adapter_timeline_media_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/adapter_timeline_media_1"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/adapter_timeline_media_2"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/adapter_timeline_media_3"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/adapter_timeline_media_4"
                        android:layout_width="wrap_content"
                        android:layout_height="60sp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/adapter_timeline_createat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/adapter_timeline_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adapter_timeline_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_star_border_24px"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="5sp"
                        android:text="0" />

                    <TextView
                        android:id="@+id/adapter_timeline_boost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_repeat_24px"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="5sp"
                        android:text="0" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>